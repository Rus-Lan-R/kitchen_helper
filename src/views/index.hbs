<div class="container px-2">
	<div class="row row-cols-3 px-2" data-subscribes>

		{{#each channels}}

			<div class="card text-end" style="width: 18rem;">
				<div id="{{this._id}}" class="card-body">
					<h5 class="card-title">{{this.name}}</h5>
					<p class="card-text">price - {{this.price}}</p>
					{{createButton this.subscribers ../userId}}
					{{! <button type="button" class="btn btn-primary">SUBSCRIBE</button> }}
          <p><a data-href class="card-text" href="/info">subscribers - {{this.subscribers.length}}</a></p>
				</div>
			</div>
		{{/each}}
	</div>
</div>

<script src="/js/index.js"></script>
