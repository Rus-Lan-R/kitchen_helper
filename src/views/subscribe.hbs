<div class="container px-2">
	<div class="card text-center">
		<div class="card-header">
			{{currentUser.name}}
		</div>
		<div class="card-body">
			<h5 class="card-title">Special title treatment</h5>
			<p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
			<a href="/" class="btn btn-primary">Go somewhere</a>
		</div>
		<div id="priceSubs" class="card-footer text-muted">
			priceForAllSubscribes -
			{{currentUser.priceForAllSubs}}
		</div>
	</div>
	<div class="row row-cols-3 px-2" data-usersubscribes>

		{{#each userChanels}}

			<div id="card" class="card text-end" style="width: 18rem;">
				<div id="{{this._id}}" class="card-body">
					<h5 class="card-title">{{this.name}}</h5>
					<p class="card-text">price - {{this.price}}</p>

					<button type="button" class="btn btn-primary">UNSUBSCRIBE</button>

				</div>
			</div>
		{{/each}}
	</div>
</div>

<script src="/js/subscribe.js"></script>
